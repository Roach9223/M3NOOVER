# M3NOOVER App Environment Variables
# Copy this file to .env.local and fill in the values
# ===================================================

# =========================
# SUPABASE (Required)
# =========================
# Get these from your Supabase project settings > API
# https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (server-side only, never expose to client)
# Used for admin operations and webhooks
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =========================
# APP URLS (Required)
# =========================
# Used for redirects, emails, and CORS

NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Production values:
# NEXT_PUBLIC_APP_URL=https://app.m3noover.com
# NEXT_PUBLIC_WEB_URL=https://m3noover.com

# =========================
# STRIPE (Required)
# =========================
# Get these from https://dashboard.stripe.com/test/apikeys
# Use test keys during development (sk_test_ / pk_test_)

STRIPE_SECRET_KEY=sk_test_51...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51...

# Webhook secret - Get from Stripe CLI or Dashboard > Webhooks
# Run: stripe listen --forward-to localhost:3001/api/stripe/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# =========================
# PUSH NOTIFICATIONS (Optional)
# =========================
# Generate VAPID keys: npx web-push generate-vapid-keys

NEXT_PUBLIC_VAPID_PUBLIC_KEY=BG5s2T...
VAPID_PRIVATE_KEY=Xd3k...

# =========================
# EMAIL (Optional)
# =========================
# Get from https://resend.com/api-keys

RESEND_API_KEY=re_...

# =========================
# CRON JOBS (Optional)
# =========================
# Used to secure cron endpoints - generate a random string

CRON_SECRET=your-random-secret-string

# =========================
# ANALYTICS (Optional)
# =========================

NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =========================
# DEVELOPMENT
# =========================

# NODE_ENV is set automatically by Next.js
# NODE_ENV=development

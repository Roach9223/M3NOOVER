{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@m3noover/shared": ["./shared/src"],
      "@m3noover/shared/*": ["./shared/src/*"],
      "@m3noover/ui": ["./packages/ui/src"],
      "@m3noover/ui/*": ["./packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
